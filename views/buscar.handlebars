<div class="buscar">
    
  <div class="form">
    <form action="/buscar" method="post">
   <h3>BUSQUE UM FILME AQUI</h3>
 <div class="inputs">
   <input type="text" name="filme" placeholder="digite o filme" id="filme"  required>
  
 </div>
  <div class="btn">
    <input type="submit" value="buscar">
  </div>
  
 
</form>

  </div>
  
 {{#if filmeEncontrado}}
 <div class="movieFound">
    
     {{ filmeEncontrado }}
     <h3>{{filmeEncontrado.filme}}</h3> 
      <div class="filme">
      
      <div class="image"> <img src="/imagens/{{filmeEncontrado.imagem}}" alt="{{filme}}" width="500"></div>
     <div class="desc">
       <p><strong>Ano:</strong> {{filmeEncontrado.ano}}</p>
       <p><strong>Diretor:</strong> {{filmeEncontrado.diretor}}</p>
       <p><strong>elenco:</strong> {{filmeEncontrado.elenco}}</p>
       <p><strong>Sinopse:</strong> {{filmeEncontrado.sinopse}}</p>
       <p><strong>curiosidades:</strong> {{filmeEncontrado.curiosidades}}</p>
     
     </div>
    </div>
 
 </div>
 {{/if}}
  
{{#if error_msg}}
  <div class="alert error">{{error_msg}}</div>
{{/if}}
</div>